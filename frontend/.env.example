# Archivo .env.example - Copia y renombra a .env antes de agregar tus propias credenciales

# Configuración de la base de datos
POSTGRES_DB=lottobueno
POSTGRES_USER=user
POSTGRES_PASSWORD=password
DATABASE_URL=postgresql+psycopg://user:password@postgres:5432/lottobueno

# URLs y endpoints
NEXT_PUBLIC_API_URL=https://applottobueno.com
COMPANY_PHONE_CONTACT=12345678901

# Configuración de seguridad
SECRET_KEY=your-secret-key
ALGORITHM=HS256
HOST=https://applottobueno.com

# Configuración de la aplicación
NEXT_PUBLIC_SITE_TITLE=Lotto Bueno
NEXT_PUBLIC_SITE_DESCRIPTION=Participa y Gana con Lotto Bueno
NEXT_PUBLIC_FAVICON_URL=/static/icon.ico

# Configuración de Telegram
API_TELEGRAM_TOKEN=your-telegram-token
WHATSAPP_URL=https://wa.me/12345678901

# Google Cloud Communications API - Reemplaza con tus propias credenciales
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret
SMS_SHORTCODE=77111
SMS_PROVIDER_URL=https://ccaiplatform.com
SMS_SUBDOMAIN=lottobueno
SMS_MAX_RETRIES=3
SMS_RETRY_DELAY=2.0 